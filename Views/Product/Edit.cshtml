@model Test_2.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Modifier le Produit</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (ViewBag.Erreur != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Erreur
                        </div>
                    }

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PriceHt" class="col-sm-3 col-form-label">PriceHT</label>
                            <div class="col-sm-9">
                                <input asp-for="PriceHt" class="form-control" />
                                <span asp-validation-for="PriceHt" class="text-danger"></span>
                            </div>
                        </div>

                     

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index">Revenir à la liste</a>
        </div>
    </div>
</div>
